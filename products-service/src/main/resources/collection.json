{
  "info": {
    "name": "Product API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "type": "text",
            "value": "Bearer <your_token_here>"
          },
          {
            "key": "Content-Type",
            "type": "text",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "products"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Product Name\",\n    \"description\": \"Product Description\",\n    \"price\": 10.99\n}"
        }
      }
    },
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "type": "text",
            "value": "Bearer <your_token_here>"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "Get Product by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "type": "text",
            "value": "Bearer <your_token_here>"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/products/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "products", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "type": "text",
            "value": "Bearer <your_token_here>"
          },
          {
            "key": "Content-Type",
            "type": "text",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/products/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "products", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Product Name\",\n    \"description\": \"Updated Product Description\",\n    \"price\": 15.99\n}"
        }
      }
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "type": "text",
            "value": "Bearer <your_token_here>"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/products/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "products", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        }
      }
    }
  ]
